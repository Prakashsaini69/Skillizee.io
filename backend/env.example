# SkilliZee Lambda Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Graphy LMS Configuration
GRAPHY_MERCHANT_ID=your_merchant_id_here
GRAPHY_API_TOKEN=your_api_token_here

# Course Configuration
COURSE_NAME=LinkedIn Mastery Course
COURSE_DESCRIPTION=Master LinkedIn for career growth and networking
COURSE_PRICE=999
COURSE_DURATION=6 weeks

# AWS Configuration (optional - will use AWS CLI default)
AWS_REGION=us-east-1
AWS_PROFILE=default

# Environment
NODE_ENV=production
STAGE=dev
